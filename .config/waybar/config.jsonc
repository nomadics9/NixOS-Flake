{
    "height": 20, // Waybar height (to be removed for auto height)
    "layer": "top", // Waybar at top layer
    "modules-left": ["custom/launcher", "cpu", "memory", "custom/weather", "hyprland/workspaces"],
    "modules-center": ["mpris"],
    "modules-right": ["network", "pulseaudio",  "backlight", "battery", "clock","tray","hyprland/language","custom/wallpaper","custom/power-menu"],
    "hyprland/workspaces": {
      "format": "{name}",
      "all-outputs": true,
      "on-click": "activate",
      "format-icons": {
        "active": " Û±é¥",
        "default": "Û∞çπ"
      },
      "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
      "6": [],
      "7": [],
      "8": [],
      "9": []
      }
    },
    "hyprland/language": {
        "format": "{short}"
     },

    "hyprland/window": {
    "max-length": 200,
    "separate-outputs": true
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%b %d %Y}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "cpu": {
      "interval": 10,
      "format": "Ôíº  {}%",
      "max-length": 10,
      "on-click": ""
    },
    "memory": {
        "interval": 30,
        "format": "Ôò™ {}%",
        "format-alt":"Ôò™ {used:0.1f}GB",
        "max-length": 10
    },
    "temperature": {
        "interval": 10,
        "format": "Ôãà {temperatureC}¬∞C",
        "max-length": 10
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "tooltip": true,
        "format-alt": "<small>{percent}%</small>",
        "format-icons": ["Û±©é ", "Û±©è ", "Û±©ê ", "Û±©ë ", "Û±©í ", "Û±©ì ", "Û±©î ", "Û±©ï ", "Û±©ñ ", "Û∞õ® "],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "smooth-scrolling-threshold": "2400",
	"tooltip-format" : "Brightness {percent}%"
    },
    "network": {
        /* "format-wifi": "Ô™®", */
        "format-wifi": "<small>{bandwidthDownBytes}</small> {icon}",
	"min-length": 10,
	"fixed-width": 10,
        "format-ethernet": "Û∞àÄ",
        "format-disconnected": "Û∞§≠",
        "tooltip-format": "{essid}",
        "interval": 1,
        "on-click": "~/.config/waybar/scripts/network/rofi-network-manager.sh",
        "format-icons": ["Û∞§Ø","Û∞§ü","Û∞§¢","Û∞§•","Û∞§®"]
        
    },

           "bluetooth": {
                "format": "{icon}",
                "format-alt": "bluetooth: {status}",
                "interval": 30,
                "format-icons": {
                     "enabled": "Ôäî",
                     "disabled": "Û∞Ç≤"
                  
                },
                "tooltip-format": "{status}"
           },

    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "Û∞ñÅ",
        "format-icons": {
            "default": ["ÔÄ¶", "ÔÄß", "Û∞ïæ"]
        },
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 1",
        "on-scroll-down": "pamixer -d 1",
	"on-click-right": "exec pavucontrol",
        "tooltip-format" : "Volume {volume}%"
    },

    "battery": {
      "bat": "BAT0",
      "adapter": "ADP0",
      "interval": 60,
      "states": {
          "warning": 20,
          "critical": 15
      },
      "max-length": 20,
      "format": "{icon} ",
      "format-warning": "{icon}",
      "format-critical": "{icon}",
      "format-charging": "<span font-family='Font Awesome 6 Free'>ÔÉß</span>",
      "format-plugged": "Û∞ö•", 
      "format-notcharging": "Û∞ö•",
      "format-alt": "{icon}<small> {time}</small>",
      "format-full": "Û∞ÇÑ", 
 

      "format-alt": "<small>{capacity}%</small> ",
      "format-full": "Û∞ö•", 
      "format-icons": ["Û±ä°", "Û±ä¢", "Û±ä£"]
    },
    "custom/weather": {
      "exec": "nix-shell ~/.config/waybar/scripts/weather.py",
      "restart-interval": 300,
      "return-type": "json"
    },   
   "custom/lock": {
       "tooltip" : false,
       "on-click": "swaylock",
       "format" : "ÔÄ£"
    },
    
      "mpris": {
  	"format": "{player_icon} {title}",
  	"format-paused": " {status_icon} <i>{title}</i>",
    "max-length": 80,
  	"player-icons": {
  		"default": "‚ñ∂",
  		"mpv": "üéµ"
  	},
  	"status-icons": {
  		"paused": "‚è∏"
  	}
  	// "ignored-players": ["firefox"]
  },
        

    
   "custom/spotify": {
        "exec": "nix-shell ~/.config/waybar/scripts/mediaplayer.py --player youtube-music",
        "format": "ÔÜº {}",
        "return-type": "json",
        "on-click": "playerctl play-pause",
        "on-double-click-right": "playerctl next",
        "on-scroll-down": "playerctl previous"
    },
    "custom/power-menu": {
        "format": "{percentage}Hz",
        "on-click": "~/.config/hypr/scripts/screenHz.sh",
        "return-type":"json",
        "exec": "cat ~/.config/hypr/scripts/hz.json",
        "interval":1,
        "tooltip": false
    }, 
    "custom/launcher": {
        "format": "Û±ÑÖ",
        "on-click": "rofi -show drun &"
    },
    "custom/wallpaper": {
       "format": "Û∞∏â",
       "on-click": "bash ~/.config/waybar/scripts/changewallpaper.sh"
    }
   }
